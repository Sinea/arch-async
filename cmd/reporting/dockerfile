FROM golang:alpine as base

RUN apk update \
    && apk add --virtual build-dependencies \
        build-base \
        gcc \
        wget \
        git \
    && apk add \
        bash


FROM base

ADD . ./app
WORKDIR ./app
ENV GO111MODULE=on

RUN CGO_ENABLED=0 go build .

ENTRYPOINT ["/go/app/reporting"]